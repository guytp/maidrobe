# Maidrobe Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Supabase Configuration
# ============================================
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/_/settings/api

# Your Supabase project URL
# Example: https://abcdefghijklmnop.supabase.co
# Note: EXPO_PUBLIC_ prefix makes this available in the Expo mobile client
EXPO_PUBLIC_SUPABASE_URL=your-project-url

# Supabase anonymous (public) key
# Safe to use in client-side code - RLS policies protect your data
# Note: EXPO_PUBLIC_ prefix makes this available in the Expo mobile client
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key
# WARNING: Never expose this in client-side code!
# Used only in Edge Functions and server-side operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# External API Keys (Optional)
# ============================================

# OpenAI API key for outfit generation and item recognition
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API key for Claude-based outfit suggestions
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Replicate API key for background removal and image processing
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=

# ============================================
# Development Configuration
# ============================================

# Node environment
NODE_ENV=development

# Enable debug logging (true/false)
DEBUG=false

# ============================================
# Feature Flags (Optional)
# ============================================

# Unleash API URL and token (if using feature flags)
UNLEASH_API_URL=
UNLEASH_CLIENT_KEY=

# ============================================
# Observability (Optional)
# ============================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Honeycomb API key for tracing
HONEYCOMB_API_KEY=

# ============================================
# Google OAuth Configuration (for Calendar Integration)
# ============================================
# Required for calendar integration features
#
# Get from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID for iOS/Android app

# Google OAuth 2.0 Client ID
GOOGLE_CLIENT_ID=

# Google OAuth 2.0 Client Secret
# WARNING: Never expose this in client-side code!
GOOGLE_CLIENT_SECRET=

# Encryption key for OAuth tokens (stored in database)
# Must be exactly 32 bytes (256 bits)
# Generate with: openssl rand -hex 32
CALENDAR_ENCRYPTION_KEY=

# Google OAuth redirect URI
# Must match the URI configured in Google Cloud Console
# Format for Expo: com.yourapp.app://oauth/redirect
# For local development, use your tunnel URL: https://xxx.an.pstmn.io
GOOGLE_REDIRECT_URI=com.maidrobe.app://oauth/callback


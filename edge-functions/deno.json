{
  "lint": {
    "include": ["supabase/functions/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": []
    }
  },
  "fmt": {
    "include": ["supabase/functions/"],
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "include": ["supabase/functions/**/*.test.ts", "tests/**/*.test.ts"]
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "supabase": "https://esm.sh/@supabase/supabase-js@2"
  }
}
